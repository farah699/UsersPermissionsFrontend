# ==============================================
# API CONFIGURATION
# ==============================================
# Backend API base URL (include /api suffix)
VITE_API_URL=http://localhost:5000/api

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Application name displayed in UI
VITE_APP_NAME="Users & Permissions Dashboard"

# Application version
VITE_APP_VERSION=1.0.0

# Application description
VITE_APP_DESCRIPTION="Comprehensive RBAC Management System"

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable user registration (if implemented)
VITE_ENABLE_REGISTRATION=false

# Enable/disable password reset functionality
VITE_ENABLE_PASSWORD_RESET=true

# Enable/disable audit logs page
VITE_ENABLE_AUDIT_LOGS=true

# Enable/disable export functionality
VITE_ENABLE_EXPORTS=true

# ==============================================
# UI CONFIGURATION
# ==============================================
# Default items per page for tables
VITE_DEFAULT_PAGE_SIZE=10

# Maximum items per page
VITE_MAX_PAGE_SIZE=100

# Default theme (light/dark)
VITE_DEFAULT_THEME=light

# ==============================================
# AUTHENTICATION CONFIGURATION
# ==============================================
# Token refresh threshold (in minutes before expiry)
VITE_TOKEN_REFRESH_THRESHOLD=5

# Auto logout on idle (in minutes, 0 to disable)
VITE_AUTO_LOGOUT_TIME=60

# Remember login duration (in days)
VITE_REMEMBER_LOGIN_DAYS=7

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Enable development tools and debugging
VITE_DEV_MODE=true

# Enable console logging
VITE_ENABLE_LOGGING=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Debounce delay for search inputs (ms)
VITE_SEARCH_DEBOUNCE=300

# Enable lazy loading for routes
VITE_ENABLE_LAZY_LOADING=true

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================
# Production API URL (uncomment for production)
# VITE_API_URL=https://your-production-api.com/api

# Enable analytics in production
# VITE_ENABLE_ANALYTICS=true